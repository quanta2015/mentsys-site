.std {
  width: var(--sys-wid);
  margin: 0 auto;
  flex: 1;
  background: #fff;
  padding: 30px 20px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.frm {
  display: flex;
  padding: 20px 25px;
}
.frml {
  flex: 1;
  position: relative;
  display: flex;
  justify-content: center;
}
.frml input {
  position: absolute;
  opacity: 0;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.frml img {
  margin-top: 20px;
  width: 180px;
  height: 180px;
  background: #ddd;
  box-sizing: border-box;
  border-radius: 100%;
}
.frml .imgInput {
  width: 220px;
  border: 1px solid grey;
  margin-top: 20px;
  display: none !important;
}
.frmr {
  flex: 2;
}
.sect {
  color: var(--clr-main);
  font-size: 18px;
  border-bottom: 1px solid var(--clr-main);
  margin-bottom: 10px;
  padding-bottom: 5px;
}
.row {
  display: flex;
  flex-wrap: wrap;
  padding: 8px 0;
}
.row label {
  width: 100px;
  color: #333;
  font-weight: bold;
  font-size: 16px;
}
.row span {
  flex: 1;
  color: #666;
  font-size: 16px;
}
.attr {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}
.attr label {
  margin-bottom: 5px;
  color: #333;
  font-weight: bold;
  font-size: 16px;
}
.attr section {
  display: flex;
  flex-direction: column;
  margin-bottom: 5px;
}
.attr section i {
  width: 100px;
  font-size: 12px;
  color: #666;
}
.fun {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}
.fun button {
  width: 200px;
  height: 40px;
  font-size: 16px;
}
